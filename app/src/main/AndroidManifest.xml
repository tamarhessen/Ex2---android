<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_huge"
        android:label="Facebook"
        android:roundIcon="@drawable/logo_huge"
        android:supportsRtl="true"
        android:theme="@style/Theme.LogIn"
        tools:targetApi="31">
        <activity
            android:name=".facebookdesign.PostActivity"
            android:exported="false"/>
        <activity
            android:name=".facebookdesign.MenuActivity"
            android:exported="false"/>
        <activity
            android:name=".facebookdesign.SettingsActivity"
            android:exported="false"/>
        <activity
            android:name=".facebookdesign.FeedActivity"
            android:exported="false"/>
        <activity
            android:name=".facebookdesign.ProfileActivity"
            android:exported="false"/>
        <activity
            android:name=".facebookdesign.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".facebookdesign.CommentsActivity"
            android:exported="false" />
        <activity
            android:name=".facebookdesign.MyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".facebookdesign.LogInActivity"
            android:exported="false" />
        <activity
            android:name=".facebookdesign.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>