<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />
    <!-- Profile Picture -->
    <!-- Cover Photo -->
    <ImageView
        android:id="@+id/cover_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:scaleType="centerCrop" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"

        android:padding="2dp" />

    <!-- User's Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"

        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <!-- Number of Friends -->
    <TextView
        android:id="@+id/num_of_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />
    <!-- Number of Friends -->
    <!-- Button for Adding Friend -->

    <TextView
        android:id="@+id/friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginStart="-69dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/btn_add_friend"
        android:text="friends"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/friends"
        android:layout_marginTop="10dp"
        android:text="Add Friend" />
    <!-- Button for Sending Message -->


    <!-- Button for Viewing Photos -->

    <!-- List of Friends -->
    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends"
        android:layout_marginStart="19dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@id/btn_add_friend"
        android:textColor="@android:color/black"
        android:text="delete friend" />

    <Button
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends"
        android:textColor="@android:color/black"
        android:layout_marginStart="19dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@id/btn_send_message"
        android:text="accept friend"
        android:backgroundTint="@color/light_grey"

       /> <!-- Set the shape of the button here -->
       />
    <TextView
        android:id="@+id/Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_more"
        android:text="Friends"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Friends"
        android:layout_marginTop="5dp" />

    <!-- List of Posts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_friends"
        android:layout_marginTop="20dp" />

    <!-- Add more views as needed -->

</RelativeLayout>
